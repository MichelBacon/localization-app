<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFloor5"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:text="@string/nbr5"
        app:layout_constraintBottom_toTopOf="@+id/btnFloor4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnFloor4"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:text="@string/nbr4"
        app:layout_constraintBottom_toTopOf="@+id/btnFloor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFloor2"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:text="@string/nbr2"
        app:layout_constraintBottom_toTopOf="@+id/btnFloor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFloor3"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:text="@string/nbr3"
        app:layout_constraintBottom_toTopOf="@+id/btnFloor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFloor1"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:text="@string/nbr1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent" />

    <com.cegepba.localization_app.Map
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="97dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:visibility="invisible"
        android:theme="@style/progressBar"/>

</androidx.constraintlayout.widget.ConstraintLayout>